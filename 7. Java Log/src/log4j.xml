<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p | %m%n" />
        </layout>
    </appender>

    <appender name="FILE_BANKING" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/banking.log" />
        <param name="Append" value="true" />
        <param name="MaxFileSize" value="1MB" />
        <param name="MaxBackupIndex" value="5"/>

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} | %-5p | [%t] (%F:%L) - %m%n" />
        </layout>
    </appender>

    <appender name="FILE_ECOMMERCE" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/ecommerce.log" />
        <param name="Append" value="true" />
        <param name="MaxFileSize" value="1MB" />
        <param name="MaxBackupIndex" value="5"/>

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} | %-5p | [%t] (%F:%L) - %m%n" />
        </layout>
    </appender>

<!--    Thay đổi <logger name="..." > phù hợp với package cần run-->
    <logger name="banking" additivity="true">
        <level value="INFO" />
        <appender-ref ref="FILE_BANKING" />
    </logger>

    <logger name="ecommerce" additivity="true">
        <level value="DEBUG" />
        <appender-ref ref="FILE_ECOMMERCE" />
    </logger>

    <root>
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
    </root>

</log4j:configuration>